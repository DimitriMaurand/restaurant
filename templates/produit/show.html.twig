{% extends 'base.html.twig' %}

{% block title %}Produit{% endblock %}

{% block body %}
<div class="bg-white flex justify-center items-center max-h-screen m-20">
    <div class="w-full flex-col justify-center bg-white rounded-lg shadow-lg p-4 mb-6">
        <div class="sm:mx-auto sm:w-full sm:max-w-sm">
    <h2 class="text-xl font-bold text-center m-4">Produit</h2>
 </div>

        <div class="flex justify-center">
    <table class="table">
        <tbody>
            
            <tr>
                <th>Nom</th>
                <td>{{ produit.nom }}</td>
            </tr>
            <tr>
                <th>Composition</th>
                <td>{{ produit.composition }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ produit.prix }}</td>
            </tr>
            <tr>
                <th>Disponible</th>
                <td>{{ produit.disponible ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>
 </div>

   <div class="flex justify-center flex-col mt-4">
  <div class="flex justify-center mt-4">
    <a href="{{ path('app_produit_index') }}"><button  class="  w-auto bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded-md">Retour</button></a>

    <a href="{{ path('app_produit_edit', {'id': produit.id}) }}"><button class="btn w-20 bg-green-500 hover:bg-green-600 text-white font-bold py-2 px-4 ml-2 rounded-md ">editer</button></a>
 </div>

  <div class="flex justify-center mt-4">
    {{ include('produit/_delete_form.html.twig') }}
     </div>
</div></div>
</div>
{% endblock %}
