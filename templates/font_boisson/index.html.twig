{% extends 'base.html.twig' %}

{% block title %}Restaurant Excurtion Boisson{% endblock %}

{% block body %}
<main class=" min-h-screen  flex-col items-center justify-between w-full md:p-24 bg-white">
            
{% include('includes/nav.html.twig') %}
            <div class="bg-gray-50 w-full ">
                <div class="mx-auto max-w-7xl px-4  lg:px-8">
                    <div class="mx-auto max-w-2xl py-16 sm:py-24 lg:max-w-none lg:py-32">
                        <div class="group relative  bg-white rounded-lg shadow-lg p-4   mb-6 ">
                            <h3 class=" text-4xl text-green-700 text-center font-semibold m-4">Nos boissons</h3>

                            <div class="relative h-80 w-full overflow-hidden rounded-lg sm:aspect-h-1 sm:aspect-w-2 lg:aspect-h-1 lg:aspect-w-1  sm:h-64">
                                <img src="https://plus.unsplash.com/premium_photo-1663047175170-44256eac4189?q=80&w=2670&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D" alt="représente des personne qui trimque a l'apéritif pour la carte des boissons" class="h-full w-full object-cover object-center" />
                            </div>
                            <h3 class=" text-2xl text-green-700 text-center font-semibold m-4">Nos bières</h3>
                            {% for boisson in boissons %}
                             {% if boisson.disponible and boisson.categorieBoisson.nom == 'Bière' %}
                                <div class="m-4 transform hover:scale-105 transition-transform">
                                     <div class="flex justify-between font-bold">
                                        <h4>{{ boisson.nom }}</h4>
                                         <p class="text-base text-gray-900">{{ boisson.volume }} cl</p>
                                        <h4>{{ boisson.prix }} €</h4>
                                    </div>
                                     <p class="text-base text-gray-900">{{ boisson.composition }}</p>
                                    </div>
                            {% endif %}
                            {% endfor %}
                             <h3 class=" text-2xl text-green-700 text-center font-semibold m-4">Nos apérifs</h3>
                            {% for boisson in boissons %}
                             {% if boisson.disponible and boisson.categorieBoisson.nom == 'Apéritif' %}
                                <div class="m-4 transform hover:scale-105 transition-transform">
                                     <div class="flex justify-between font-bold">
                                        <h4>{{ boisson.nom }}</h4>
                                         <p class="text-base text-gray-900">{{ boisson.volume }} cl</p>
                                        <h4>{{ boisson.prix }} €</h4>
                                    </div>
                                     <p class="text-base text-gray-900">{{ boisson.composition }}</p>
                                    </div>
                            {% endif %}
                            {% endfor %}
                             <h3 class=" text-2xl text-green-700 text-center font-semibold m-4">Nos cocktails</h3>
                               {% for boisson in boissons %}
                             {% if boisson.disponible and boisson.categorieBoisson.nom == 'Cocktail' %}
                                <div class="m-4 transform hover:scale-105 transition-transform">
                                     <div class="flex justify-between font-bold">
                                        <h4>{{ boisson.nom }}</h4>
                                         <p class="text-base text-gray-900">{{ boisson.volume }} cl</p>
                                        <h4>{{ boisson.prix }} €</h4>
                                    </div>
                                     <p class="text-base text-gray-900">{{ boisson.composition }}</p>
                                    </div>
                            {% endif %}
                            {% endfor %}
                            <h3 class=" text-2xl text-green-700 text-center font-semibold m-4">Nos cocktails sans alcool</h3>
                               {% for boisson in boissons %}
                             {% if boisson.disponible and boisson.categorieBoisson.nom == 'Cocktail' and boisson.estAlcolisee == false %}
                                <div class="m-4 transform hover:scale-105 transition-transform">
                                     <div class="flex justify-between font-bold">
                                        <h4>{{ boisson.nom }}</h4>
                                         <p class="text-base text-gray-900">{{ boisson.volume }} cl</p>
                                        <h4>{{ boisson.prix }} €</h4>
                                    </div>
                                     <p class="text-base text-gray-900">{{ boisson.composition }}</p>
                                    </div>
                            {% endif %}
                            {% endfor %}
                            <h3 class=" text-2xl text-green-700 text-center font-semibold m-4">Nos softs</h3>
                            {% for boisson in boissons %}
                             {% if boisson.disponible and boisson.categorieBoisson.nom == 'Soft' %}
                                <div class="m-4 transform hover:scale-105 transition-transform">
                                     <div class="flex justify-between font-bold">
                                        <h4>{{ boisson.nom }}</h4>
                                         <p class="text-base text-gray-900">{{ boisson.volume }} cl</p>
                                        <h4>{{ boisson.prix }}€</h4>
                                    </div>
                                     <p class="text-base text-gray-900">{{ boisson.composition }}</p>
                                    </div>
                            {% endif %}
                            {% endfor %}
                             <h3 class=" text-2xl text-green-700 text-center font-semibold m-4">Nos boissons chaudes</h3>
                            {% for boisson in boissons %}
                             {% if boisson.disponible and boisson.categorieBoisson.nom == 'Boisson chaude' %}
                                <div class="m-4 transform hover:scale-105 transition-transform">
                                     <div class="flex justify-between font-bold">
                                        <h4>{{ boisson.nom }}</h4>
                                         <p class="text-base text-gray-900">{{ boisson.volume }} cl</p>
                                        <h4>{{ boisson.prix }}€</h4>
                                    </div>
                                     <p class="text-base text-gray-900">{{ boisson.composition }}</p>
                                    </div>
                            {% endif %}
                            {% endfor %}
                        </div>
                    </div>
                </div>
            </div>

            
        </main >
{% endblock %}
