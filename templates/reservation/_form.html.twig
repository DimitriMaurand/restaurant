<div class="mt-10 sm:mx-auto sm:w-full sm:max-w-sm">
    {{ form_start(form) }}

    {# Affiche les erreurs globales du formulaire #}
    <div class="form-errors text-red-500 text-sm mb-4">
        {{ form_errors(form) }}
    </div>

    {# Champs du formulaire avec affichage des erreurs pour chaque champ #}
    <div class="form-group mb-4">
        {{ form_label(form.nom, 'Nom', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
        {{ form_widget(form.nom, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm'}}) }}
        <div class="text-red-500 text-sm mt-1">
            {{ form_errors(form.nom) }}
        </div>
    </div>

    <div class="form-group mb-4">
        {{ form_label(form.prenom, 'Prénom', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
        {{ form_widget(form.prenom, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm'}}) }}
        <div class="text-red-500 text-sm mt-1">
            {{ form_errors(form.prenom) }}
        </div>
    </div>

    <div class="form-group mb-4">
        {{ form_label(form.telephone, 'Téléphone', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
        {{ form_widget(form.telephone, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm'}}) }}
        <div class="text-red-500 text-sm mt-1">
            {{ form_errors(form.telephone) }}
        </div>
    </div>

    <div class="form-group mb-4">
        {{ form_label(form.email, 'Email', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
        {{ form_widget(form.email, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm'}}) }}
        <div class="text-red-500 text-sm mt-1">
            {{ form_errors(form.email) }}
        </div>
    </div>

    <div class="form-group mb-4">
        {{ form_label(form.message, 'Message', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
        {{ form_widget(form.message, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm'}}) }}
        <div class="text-red-500 text-sm mt-1">
            {{ form_errors(form.message) }}
        </div>
    </div>



   <div class="form-group flex items-center mb-4">
        {{ form_widget(form.rgpd, {'attr': {'class': 'h-4 w-4 text-green-600 focus:ring-green-500 border-gray-300 rounded'}}) }}
        <label class="ml-2 block text-sm font-medium text-gray-700">
            J'accepte les conditions <a href="{{ path('app_rgpd') }}">ici</a>
        </label>
        <div class="text-red-500 text-sm mt-1">
            {{ form_errors(form.rgpd) }}
        </div>
    </div>


    {# Bouton de soumission du formulaire #}
    <div class="container mx-auto">
        {# Affichage des messages flash #}
        {# {% for label, messages in app.flashes %}
           
                <div class="p-4 mb-4 text-sm font-medium text-white bg-{{ label == 'success' ? 'green-500' : (label == 'error' ? 'red-500' : 'blue-500') }} rounded-lg">
                    {{ message }}
                </div>
           
        {% endfor %} #}
        {% for message in app.flashes('success') %}
            <div class='text-green-500' >
                {{message | join('<br>')}}
            </div>
        {% endfor %}
        {% for message in app.flashes('error') %}
            <div class='text-red-500' >
                {{message | join('<br>')}}
            </div>
        {% endfor %}
    </div>
    <div class="h-1/6 flex w-full justify-between items-end px-4 mt-4">
        <button class="btn w-48 bg-green-500 hover:bg-green-600 text-white font-bold py-2 px-4 ml-2 rounded-md">
            {{ button_label|default('Enregistrer') }}
        </button>
    </div>

    {{ form_end(form) }}
</div>
  </div>
</div>
</div></div>