  <script>
    document.addEventListener('DOMContentLoaded', function () {
        let diapositives = document.querySelectorAll('.diapositive-image');
        let diapositiveActuelle = 0;

        function afficherProchaineDiapositive() {
            diapositives[diapositiveActuelle].classList.add('opacity-0');
            diapositives[diapositiveActuelle].classList.remove('opacity-100');

            diapositiveActuelle = (diapositiveActuelle + 1) % diapositives.length;

            diapositives[diapositiveActuelle].classList.add('opacity-100');
            diapositives[diapositiveActuelle].classList.remove('opacity-0');
        }

        setInterval(afficherProchaineDiapositive, 5000); // Change d'image toutes les 5 secondes
    });
</script>